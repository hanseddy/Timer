<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FDFDFD</item>
        <item name="colorPrimaryDark">#FBFBFB</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumberStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">120sp</item>
    </style>

    <style name="buttonstyle">
        <item name="android:background">@drawable/round_button</item>
        <item name="android:elevation">30dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/greyText</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="informationStyle">
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>